<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#309095">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="580dp"
                android:background="#509695"
                >
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="38dp"
                android:gravity="center"
                android:layout_marginLeft="135dp"
                android:text="Search"
                />

            <SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginEnd="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="100dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/googleg_disabled_color_18"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl"
            android:layout_marginTop="-560dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/gl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:text="Google"
                android:background="@drawable/bt"
                android:textColor="#000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/common_google_signin_btn_icon_dark" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl2"
            android:layout_marginTop="10dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/ms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                android:text="Microsoft"
                android:textAllCaps="false"
                android:background="@drawable/bt"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mslogo" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl3"
            android:layout_marginTop="10dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/fb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                android:gravity="center"
                android:text="Facebook"
                android:textStyle="bold"
                android:background="@drawable/bt"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/download" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl4"
            android:layout_marginTop="10dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/zh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                android:textAllCaps="false"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Zoho"
                android:background="@drawable/bt"
                android:textColor="#000"
                android:textSize="30dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/zoho"
                />

            <ScrollView
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="154dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl5"
            android:layout_marginTop="10dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/cg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cognizant"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="30dp"
                android:background="@drawable/bt"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/cognizant"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl7"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/rl6"
            android:layout_marginTop="10dp"
            android:outlineProvider="background"
            >

            <Button
                android:id="@+id/in"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Infosys"
                android:textAllCaps="false"
                android:textColor="#000"
                android:gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:layout_marginRight="200dp"
                android:background="@drawable/bt"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/nfosys" />

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl8"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/rl7"
                android:layout_marginTop="10dp"
                android:outlineProvider="background"
                >

                <Button
                    android:id="@+id/wip"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wipro"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="200dp"
                    android:background="@drawable/bt"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/wipro" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>